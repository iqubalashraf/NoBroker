<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res_auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        res_auto:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp">


                <TextView
                    android:id="@+id/propertyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_next_bold"
                    android:maxLines="1"
                    android:text="2 BHK in S m kuttria, Madiwala, Bengaluru, Karnataka, India"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/locality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/propertyTitle"
                    android:fontFamily="@font/avenir_next_regular"
                    android:layout_marginTop="-5dp"
                    android:maxLines="2"
                    android:textColor="@color/text_color"
                    android:text="Koramangala 8th Block Koramangala 6th Block, Bengaluru, Karnataka, India"
                    android:textSize="14sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/property_placeholder_grande" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/photo"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_next_bold"
                    android:gravity="center"
                    android:text="15,500" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_color"/>

                <TextView
                    android:id="@+id/furnishing_stage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="@font/avenir_next_regular"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:text="Semi Furnished Family" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_color"/>

                <TextView
                    android:id="@+id/area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_next_demi_bold"
                    android:gravity="center"
                    android:text="1200 Sq.ft" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
